@page "/"
@inherits LayoutComponentBase
@rendermode InteractiveServer
@inject NavigationManager Navigation
@using BlazorApp1.Components.Notification
@using BlazorApp1.Components.Header

<PageTitle>Home</PageTitle>

<Header ShowBackButton="false">
    <ActionContent>
        <div class="search-bar">
            <i class="fas fa-search search-icon"></i>
            <input type="text" 
                    placeholder="Search Ticket Number" 
                    @bind="searchTerm"
                    @bind:event="oninput" />
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                <button class="clear-btn" @onclick="ClearSearch">
                    <i class="fas fa-times"></i>
                </button>
            }
        </div>
        <NotificationBadge />
    </ActionContent>
</Header>
<div class="home-container">
    <!-- Content area -->
    <div class="content-area">
        <h1>Welcome Home</h1>
        <!-- Add your home page content here -->
    </div>
    <div class="action-buttons">
        <Btn AriaLabel="Scan button" IconOnly=true IconClass="bi-qr-code-scan" Style="secondary" NavigateTo="/scan" />
        <Btn AriaLabel="Add Ticket button" IconOnly=true NavigateTo="/createTicket" />
    </div>
</div>

@code {
    private string searchTerm = "";

    private void ClearSearch()
    {
        searchTerm = "";
    }
}

