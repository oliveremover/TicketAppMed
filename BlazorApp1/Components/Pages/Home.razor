@page "/"
@inherits LayoutComponentBase
@rendermode InteractiveServer
@inject NavigationManager Navigation
@using BlazorApp1.Components.Notification
@using BlazorApp1.Components.Header
@using BlazorApp1.Components.Searchbar
<PageTitle>Home</PageTitle>

<Header ShowBackButton="false">
    <ActionContent>
        <Searchbar 
            @bind-SearchTerm="searchTerm" 
            OnSearch="HandleSearch"
            Placeholder="Search Ticket Number"
            IconClass="fas fa-search" />
        <NotificationBadge />
    </ActionContent>
</Header>
<div class="home-container">
    <!-- Content area -->
    <div class="content-area">
        <h1>Welcome Home</h1>
        <!-- Add your home page content here -->
    </div>
    <div class="action-buttons">
        <Btn AriaLabel="Scan button" IconOnly=true IconClass="bi-qr-code-scan" Style="secondary" NavigateTo="/scan" />
        <Btn AriaLabel="Add Ticket button" IconOnly=true NavigateTo="/createTicket" />
    </div>
</div>

@code {
    private string searchTerm = "";

    private void HandleSearch(string term)
    {
        // Handle search logic here
        Console.WriteLine($"Searching for: {term}");
    }
}

